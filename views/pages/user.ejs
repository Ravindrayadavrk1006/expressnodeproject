<!DOCTYPE html>

<html>
    <head>
     
        <%- include('../parts/head.ejs') %>
       <!-- <link rel="stylesheet" href="/stylesheets/signin.css"> -->
       <link rel="stylesheet" href="/stylesheets/fontawesome-free-5.15.1-web/css/all.css">

    </head>
    <body>
       <div>
            <%- include('../parts/header.ejs') %>
        </div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-7">
                    <%- include('../parts/messages.ejs') %>
                    <form action="/user/signUp" method="post">
                        <h2 id="heading" >Sign Up</h2>
                        <h5 id="signUpSub">Hey! Enter the info to get better reach with us</h5>
                        <div class="form-group">
                            <label for="firstName">firstName</label>
                            <input class="signupInput form-control" type="text" name="firstName" id="firstName"
                            value="<%= typeof firstName != 'undefined' ? firstName :'' %>"
                           
                            />
                        </div>
                        <div class="form-group">
                            <label for="secondName">secondName</label>
                            <input class="signupInput form-control" type="text" name="secondName" id="secondName"
                            value="<%= typeof secondName != 'undefined' ? secondName :'' %>"
                            />
                        </div>

                        <div class="form-group">
                            <label for="username">Email </label>
                            <input  class="form-control signupInput" type="text" name="username" id="username"
                            value="<%= typeof username != 'undefined' ? username :'' %>"
                            />
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input  class="signupInput form-control" type="password" name="password" id="password"
                            value="<%= typeof username != 'undefined' ? username :'' %>"
                            />
                        </div>
                        <div class="form-group">
                            <label for="confirmPassword">Confirm Password</label>
                            <input  class="signupInput form-control" type="password" name="confirmPassword" id="confirmPassword"
                            value="<%= typeof confirmPassword != 'undefined' ? confirmPassword :'' %>"
                            />
                        </div>
                        
                        <button class="btn signupBtn btn-primary">Register</button>
                        <div>
                            <p>Have an account? <span><a href="/user/signin">Sign In</a></span>
                            <p>
                        </div>

                    </form>
                </div>
            </div>
        </div>
        <style>
            .col-7
            {
                margin-left: 20vw;
            }
            #signUpSub
            {
                color: gray;
                text-align: center;
            }
            #heading
            {
                text-align: center;
            }
        </style>
    </body>
</html>