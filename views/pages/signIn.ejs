<!DOCTYPE html>

<html>
    <head>
     
        <%- include('../parts/head.ejs') %>
       <!-- <link rel="stylesheet" href="/stylesheets/signin.css"> -->
       <link rel="stylesheet" href="/stylesheets/fontawesome-free-5.15.1-web/css/all.css">

    </head>
    <body>
       <div>
            <%- include('../parts/header.ejs') %>
        </div>
        <div class="container-fluid">
            <div class="row">
                
                <div  class="col-5 rounded-left rounded-right">
                    <%- include('../parts/messages.ejs') %>
                    <form action="/user/signIn" method="post">
                        <h2>Sign In</h2>
                        
                        <h4>Welcome Back</h4>
                        <p>Enter your email and password to connect with Us!</p>
                        <div class="form-group">
                            <label for="username">Email  </label>
                            <input placeholder="EMAIL" class="form-control signinInput" type="text" name="username" id="username"
                            value="<%= typeof signinusername != 'undefined' ? username :'' %>"
                            />
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input placeholder="PASSWORD" class="form-control signinInput" type="password" name="password" id="password"
                            value="<%= typeof signinpassword != 'undefined' ? password :'' %>"
                            />
                        </div>
                    <button  class="btn btn-primary">
                        SingIn
                    </button>
                    <div>
                        <p>No account? <span><a href="/user/signUp">Sign Up</a></span>
                        <p>
                    </div>
                    </form>
                </div>
            </div>
        </div>
        <style>
            .col-5
            {
                background-color: rgb(112, 108, 110);
                padding-top: 10vh;
                margin-left: 30vw;
                margin-top:10vh;
                text-align: center;
                color: white;
                
            }
        </style>
    </body>
</html>