<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Book appointment</title>
        <link rel="stylesheet" href="/stylesheets/index.css">
        <%- include('../../parts/head.ejs') %>
        <link rel="stylesheet" href="/stylesheets/newPatient.css">
    </head>
<body>
    <div>
        <%- include('../../parts/header.ejs') %>
    </div>
    <div class="container">
        <% for(var i = 0; i < appointments.length; i++) { %>
            <% if (i === 0 || i % 3 === 0) { %>
              <div class="row">
            <% } %>
              <div class="col-sm">
                <div class="card border-danger mb-3" style="max-width: 20rem;">
                    <div class="card-body">
                       <h4 class="card-title"><%= appointments[i].firstName %> <%=appointments[i].secondName%></h4>
                       <p>
                           Email <%= appointments[i].email %> <br>
                           MobileNo <%= appointments[i].mobileNo%>
                        </p>
                        <p class="card-text">
                            <% var timeArray=(appointments[i].dateTime).split("T")%>
                            date: <%=timeArray[0]%> <br>
                            time: <%= timeArray[1]%>
                        </p>
                    </div>
                </div>
              </div>
            <% if (i === 0 || i % 3 === 0) { %>
              </div>
            <% } %>
          <% } %>
    
    </div>
</body>
</html>

